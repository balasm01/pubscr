alias k="kubectl -n $ns"
alias kc=kubectl 
alias kcr="kubectl create"
alias kcdes="kubectl describe"
alias kcdel="kubectl delete"
alias kcg="kubectl get"
alias kced="kubectl edit"
alias kcfg="kubectl config"
alias kcrmap="kubectl create configmap"
alias ksetns="kubectl config set-context --current --namespace"
alias kcrf="kubectl create -f"
alias kcgy="kubectl get -o yaml"
alias krls="kubectl rollout status"
alias krlh="kubectl rollout history"
alias krlu="kubectl rollout undo"
alias kcaf="kubectl apply -f"
alias kgns="kubectl config view | grep namespace"
alias kxit="kubectl exec -it"
alias kdrn="kubectl -o yaml --dry-run=client"
