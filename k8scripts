export ns=default
echo 'alias k="kubectl -n $ns"' >> .profile 
echo 'alias kdr="kubectl -n $ns -o yaml --dry-run=client"' >> .profile
echo 'alias kc=kubectl' >> .profile  
echo 'alias kcr="kubectl create"' >> .profile  
echo 'alias kcdes="kubectl describe"' >> .profile   
echo 'alias kcdel="kubectl delete"' >> .profile   
echo 'alias kcg="kubectl get"' >> .profile   
echo 'alias kced="kubectl edit"' >> .profile 
echo 'alias kcfg="kubectl config"' >> .profile 
echo 'alias kcrmap="kubectl create configmap"' >> .profile
echo 'alias ksetns="kubectl config set-context --current"' >> .profile 
echo 'alias kcrf="kubectl create -f"' >> .profile
echo 'alias kcgy="kubectl get -o yaml"' >> .profile
echo 'alias krls="kubectl rollout status"' >> .profile
echo 'alias krlh="kubectl rollout history"' >> .profile
echo 'alias krlu="kubectl rollout undo"' >> .profile
echo 'alias kcaf="kubectl apply -f"' >> .profile
echo 'alias kgns="kubectl config view | grep namespace"' >> .profile
source .profile
clear
echo ok
